<h1>Eat-da-Burger</h1>

<div id="display">

    <div id="devourable-container">
         <h2>Devourable Burgers</h2>
            {{#each burgers}}
                {{#unless devoured}}
                    <p>{{burgerName}} {{> burgers/burger-block devoured=false}}<p>
                {{/unless}}
            {{/each}}
    </div>

    <div id="devoured-container">
        <h2>Devoured Burgers</h2>
            {{#each burgers}}
                {{#if devoured}}
                    <p>{{burgerName}} {{> burgers/burger-block devoured=true}}</p>
                {{/if}}
            {{/each}}
    </div>
   
</div>

<h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <input type="text" id="burgerName" name="name">
        </div>

        <button type="submit" id="add-button">Add Burger</button>
    </form>